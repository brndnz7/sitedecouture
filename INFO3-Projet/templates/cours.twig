{% extends 'base.twig' %}

{% block main %}
<div class="container mt-4">
    <h2>Liste des Cours</h2>
    <div class="row">
        {% if liste_cours is not empty %}
            {% for cours in liste_cours %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ cours.titre }}</h5>
                            <p class="card-text">{{ cours.description | slice(0, 100) ~ '...' }}</p>
                            <p class="card-text"><strong>{{ cours.prix | number_format(2, '.', ',') }} €</strong></p>
                            <p class="card-text">Difficulté : {{ cours.difficulte }}</p>
                            <p class="card-text">Places restantes : {{ cours.places_restantes }}</p>
                            <a href="#" class="btn btn-primary mt-2">Réservez</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-center">Aucun cours disponible pour le moment.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
