{% extends 'pro.twig' %}


{% block main %}
<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h3 class="text-primary">{{ cours.titre }}</h3>
            <h4 class="text-muted">Date : {{ cours.date|date("d/m/Y") }}</h4>
            <h4 class="text-muted">Prix : {{ cours.prix|number_format(2, '.', ',') }} €</h4>
            <h4 class="text-muted">Difficulté : {{ cours.difficulte }}</h4>
            <h4 class="text-muted">Places restantes : {{ cours.places_restantes }}</h4>
            <p>{{ cours.description }}</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12 d-flex gap-2">
            <a href="professionnel.php?page=cours&action=edit&id={{ cours.id }}" class="btn btn-primary">Modifier</a>
            <a href="professionnel.php?page=cours&action=new_element&id={{ cours.id }}" class="btn btn-secondary">Ajouter un élément</a>
        </div>
    </div>
    
</div>
{% endblock %}
