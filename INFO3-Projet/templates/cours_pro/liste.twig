{% extends 'pro.twig' %}

{% block main %}
<div class="container">
    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h3 class="text-primary">Liste des cours de couture</h3>
            <a href="professionnel.php?page=cours&action=new" class="btn btn-success">Ajouter un nouveau cours</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if liste_cours is not empty %}
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Prix (€)</th>
                        <th>Places restantes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cours in liste_cours %}
                    <tr>
                        <td>{{ cours.id }}</td>
                        <td>{{ cours.titre }}</td>
                        <td>{{ cours.date|date("d/m/Y") }}</td>
                        <td>{{ cours.prix|number_format(2, '.', ',') }}</td>
                        <td>{{ cours.places_restantes }}</td>
                        <td>
                            <a href="professionnel.php?page=cours&action=detail&id={{ cours.id }}" class="btn btn-sm btn-primary">Détails</a>
                            <a href="professionnel.php?page=cours&action=edit&id={{ cours.id }}" class="btn btn-sm btn-warning">Modifier</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p class="text-danger">Aucun cours disponible.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

