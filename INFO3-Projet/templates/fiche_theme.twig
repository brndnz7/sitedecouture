{% extends 'base.twig' %}

{% block main %}
<div class="container my-5">
    <h1 class="text-center mb-4">{{ theme.nom }}</h1>

    <div class="row">
        <div class="col-md-6">
            {% if theme.image %}
                <img src="upload/{{ theme.image }}" alt="{{ theme.nom }}" class="img-fluid shadow-sm rounded " style="width: 400px; height: 400px;">
            {% else %}
                <div class="bg-light d-flex justify-content-center align-items-center rounded" style="height: 300px;">
                    <span>Aucune image disponible</span>
                </div>
            {% endif %}
        </div>
        <div class="col-md-6">
            <h3>Description</h3>
            <p>{{ theme.description }}</p>
            <h4 class="mt-4">Prix : {{ theme.prix | number_format(2, ',', ' ') }} €</h4>
            <button class="btn btn-success btn-lg mt-3"><i class="bi bi-cart-plus"></i> Ajouter au panier</button>
            <div class="mt-4">
                <h5>Moyens de paiement :</h5>
                <div class="d-flex align-items-center">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQLmCw9KwTMuJOlqCjSQ8StSY7qg0gMtohnqA&s" alt="PayPal" class="me-3" style="width: 100px;  height: 40px;">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2a/Mastercard-logo.svg/800px-Mastercard-logo.svg.png" alt="MasterCard" class="me-3" style="width: 100px;  height: 50px;">
                    <img src="https://logo-marque.com/wp-content/uploads/2020/04/Visa-Logo-2006%E2%80%932014.jpg" alt="Visa" style="width: 100px;  height: 50px;">
                </div>
            </div>
        </div>
    </div>
    
    <h2 class="mt-5">Commentaires</h2>
    <div class="mt-4">
        <div class="border p-3 rounded mb-3">
            <p><strong>Jean Dupont :</strong> Très bon produit, je recommande !</p>
            <p class="text-muted">Posté le 20 décembre 2024</p>
        </div>
        <div class="border p-3 rounded mb-3">
            <p><strong>Marie Curie :</strong> Description fidèle, très satisfaite de mon achat.</p>
            <p class="text-muted">Posté le 18 décembre 2024</p>
        </div>

        <form action="/comment" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="comment" class="form-label">Ajouter un commentaire :</label>
                <textarea id="comment" name="comment" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
</div>
{% endblock %}
