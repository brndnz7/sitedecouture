{% extends 'admin.twig' %}

{% block main %}
<div class="container my-4">
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">{{ theme.nom }}</h2>
            <p class="card-text">{{ theme.description }}</p>
            <img src="upload/{{ theme.image }}" alt="image" class="img-fluid">
        </div>
    </div>
    <div class="d-flex justify-content-end mb-4">
        <a href="admin.php?page=article&action=new&id={{ theme.id }}" class="btn btn-primary">Nouvel article</a>
    </div>
    <div>
        {% for article in liste_articles %}
        <div class="card mb-3">
            <div class="card-body">
                <h3 class="card-title">{{ article.titre }}</h3>
                <h4 class="card-subtitle text-muted">{{ article.redacteur }}</h4>
                <p class="card-text">{{ article.accroche }}</p>
                <img src="upload/{{ article.image }}" alt="image" class="img-fluid mb-3">
                <div class="d-flex justify-content-between">
                    <a href="admin.php?page=article&action=read&id={{ article.id }}" class="btn btn-outline-info">Voir le détail</a>
                    <a href="admin.php?page=article&action=exchange&id={{ article.id }}" class="btn btn-outline-warning">Remonter</a>
                    <a href="admin.php?page=article&action=edit&id={{ article.id }}" class="btn btn-outline-secondary">Modifier</a>
                    <a href="admin.php?page=article&action=delete&id={{ article.id }}" class="btn btn-outline-danger">Supprimer</a>
                </div>
            </div>
        </div>
        {% else %}
        <p class="text-center text-muted">Aucun article présent</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
